<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="89dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="103dp"
        android:layout_height="126dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/housename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/housename"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="name"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/keeper2"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="7dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:inputType="textMultiLine"
        android:text="花蓮市林榮街74巷7號"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/housename" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="0922100858"
        app:layout_constraintEnd_toStartOf="@+id/price2"
        app:layout_constraintStart_toEndOf="@+id/phone2"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/phone2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:text="電話 "
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="16000"
        app:layout_constraintBaseline_toBaselineOf="@+id/price2"
        app:layout_constraintStart_toEndOf="@+id/price2" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text=" 月租 "
        app:layout_constraintBaseline_toBaselineOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@+id/phone" />

    <TextView
        android:id="@+id/keeper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="湯小姐"
        app:layout_constraintBaseline_toBaselineOf="@+id/keeper2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/keeper2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:text="房東"
        app:layout_constraintEnd_toStartOf="@+id/keeper"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


